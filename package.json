{
  "name": "react-lightsaber",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnaud-zg/react-lightsaber.git"
  },
  "license": "MIT",
  "scripts": {
    "build:library": "rollup -c rollup.config.ts",
    "build:storybook": "build-storybook -c .storybook -o docs",
    "build:style": "gulp",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "prerelease": "yarn run build:storybook && git add docs/",
    "release": "standard-version -a",
    "test:coverage:report": "yarn run test:coverage && codecov -f coverage/*.json",
    "test:coverage": "yarn test --coverage",
    "test": "jest --env=jsdom --config jest.config.json",
    "watch:all": "npm-run-all --parallel watch:library watch:storybook watch:style",
    "watch:library": "rollup -c rollup.config.ts -w",
    "watch:storybook": "start-storybook -p 6006",
    "watch:style": "gulp watch"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "devDependencies": {
    "@storybook/react": "6.3.8",
    "@types/enzyme": "3.10.9",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.17",
    "@types/react": "17.0.22",
    "@types/react-test-renderer": "17.0.1",
    "@types/rollup-plugin-commonjs": "9.2.0",
    "@types/rollup-plugin-json": "3.0.3",
    "@types/rollup-plugin-node-resolve": "4.0.0",
    "@types/rollup-plugin-sourcemaps": "0.4.2",
    "@types/storybook__react": "4.0.2",
    "babel-loader": "8.2.2",
    "babel-preset-react-app": "10.0.0",
    "codecov": "3.8.3",
    "colors": "1.4.0",
    "cross-env": "7.0.3",
    "css-loader": "6.3.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "gulp": "4.0.2",
    "gulp-clean-css": "4.3.0",
    "gulp-concat": "2.6.1",
    "gulp-sass": "5.0.0",
    "gulp-size": "4.0.1",
    "gulp-sizereport": "1.2.1",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "jsdom": "16.7.0",
    "lint-staged": "11.1.2",
    "node-sass": "6.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "react-test-renderer": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.57.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-cleanup": "3.2.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-filesize": "9.1.1",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-typescript2": "0.30.0",
    "rollup-plugin-uglify": "6.0.4",
    "sass-loader": "12.1.0",
    "standard-version": "9.3.1",
    "style-loader": "3.2.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "4.1.0",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
